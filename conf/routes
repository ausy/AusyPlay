# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Ignore favicon requests
GET     /favicon.ico                            404

# Home page
GET     /                                       Application.index

# Collection pages
GET     /collection/select/{bookId}/{selected}      Collection.selectUnselectBook
GET     /history/{borrowerId}/{ownerId}             Collection.history
GET     /history/{borrowerId}                       Collection.history
GET     /history/?                                  Collection.history
GET     /collections/manage                         Collection.manage
GET     /collections/lent                           Collection.lentBooks
GET     /collections/{userId}                       Collection.display
POST    /borrow                                     Collection.borrowsBook
POST     /return/{ownedBookId}                      Collection.returnsBook
*       /hey                                        Collection.helloNorbert

# Import CRUD routes
*      /crud                                    module:crud

# Import Secure routes
*       /                                       module:secure

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
